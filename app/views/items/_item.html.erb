<h2>To-Do list</h2>

<div class="row">

  <div class="col-md-8">
    <div class="media">
      <ol>
        <% @items.each do |item| %>
          <li>
            <%= item.name %>
            <%= link_to "", [current_user,item], remote: true, method: :delete, class: 'glyphicon glyphicon-ok' %>
          </li>
          <% end %>
      </ol>

    </div>
  </div>


</div>
