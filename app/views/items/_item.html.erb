<div id="items-container">
  <h2>To-Do list</h2>

  <div class="row">


  <!-- <div class="col-md-8"> -->
  <table class="table table-hover">
    <thead>
      <tr>
      <!-- <th>#</th> -->
      <th scope="col">Item</th>
      <th scope="col">Done</th>
      <th scope="col">Time left</th>
    </tr>
    </thead>

    <tbody>
      <% if @user == current_user %>
          <% @items.each do |item| %>
          <tr id=<%= "item-#{item.id}"%>>
            <td><%= item.name %></td>
            <td><%= link_to "", [current_user, item], remote: true, method: :delete, class: 'glyphicon glyphicon-ok', onclick: "blocmetrics.report('To-Do completed clicked')" %></td>
              <% if expired?(item) %>
                <td>EXPIRED</td>
              <% else %>
                <td><%= distance_of_time_in_words(Time.now, item.created_at + 7.days) %></td>
              <% end %>
            <% end %>
          </tr>
      <% end %>
    <tbody>

  </table>
  </div>
</div>

<script>
    blocmetrics.report('To-do added/completed');
</script>
